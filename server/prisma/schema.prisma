generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Author {
  id           Int            @id @default(autoincrement())
  firstname    String
  lastname     String
  AuthorsBooks AuthorsBooks[]
}

model Book {
  id           Int            @id @default(autoincrement())
  title        String
  details      String
  AuthorsBooks AuthorsBooks[]
}

//Add a explicit many to many relationship.

model AuthorsBooks {
  author    Author @relation(fields: [authorId], references: [id])
  authorId  Int
  book      Book   @relation(fields: [bookId], references: [id])
  bookId    Int
  @@id([authorId, bookId])
}
